<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_unordered_circle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_circle_soft_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_ingredient_tool"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        android:textColor="@color/neutral_900"
        app:layout_constraintStart_toEndOf="@id/iv_unordered_circle"
        app:layout_constraintTop_toTopOf="@id/iv_unordered_circle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="200g strawberry segar"/>

</androidx.constraintlayout.widget.ConstraintLayout>