<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_unordered_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle_soft_yellow"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_ordered_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textColor="@color/neutral_900"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/iv_unordered_circle"
        app:layout_constraintTop_toTopOf="@id/iv_unordered_circle"
        app:layout_constraintBottom_toBottomOf="@id/iv_unordered_circle"
        app:layout_constraintEnd_toEndOf="@id/iv_unordered_circle"
        tools:text="1."/>

    <TextView
        android:id="@+id/tv_step"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        android:textColor="@color/neutral_900"
        app:layout_constraintStart_toEndOf="@id/iv_unordered_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Masukkan telur, orak arik hingga kecoklatan, masukkan bumbu parut masak hingga wangi"/>

</androidx.constraintlayout.widget.ConstraintLayout>